<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeTkActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_header_observer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tv_title_mandor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/mandor"
                        android:textSize="16sp"
                        app:layout_constraintHorizontal_weight="0.3"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/tv_mandor"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_mandor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/dummy_name"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintHorizontal_weight="0.7"
                        app:layout_constraintLeft_toRightOf="@id/tv_title_mandor"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_title_mandor" />

                    <TextView
                        android:id="@+id/tv_title_kasie"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/kasie"
                        android:textSize="16sp"
                        app:layout_constraintHorizontal_weight="0.3"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/tv_kasie"
                        app:layout_constraintTop_toBottomOf="@id/tv_mandor" />

                    <TextView
                        android:id="@+id/tv_kasie"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/dummy_name"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintHorizontal_weight="0.7"
                        app:layout_constraintLeft_toRightOf="@id/tv_title_kasie"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_title_kasie" />

                    <TextView
                        android:id="@+id/tv_title_division"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/division"
                        android:textSize="16sp"
                        app:layout_constraintHorizontal_weight="0.3"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/tv_division"
                        app:layout_constraintTop_toBottomOf="@id/tv_kasie" />

                    <TextView
                        android:id="@+id/tv_division"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="FE1, Farm Establish PG1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintHorizontal_weight="0.7"
                        app:layout_constraintLeft_toRightOf="@id/tv_title_division"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_title_division" />

                    <TextView
                        android:id="@+id/tv_title_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/date"
                        android:textSize="16sp"
                        app:layout_constraintHorizontal_weight="0.3"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/tv_date"
                        app:layout_constraintTop_toBottomOf="@id/tv_division" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/dummy_date"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintHorizontal_weight="0.7"
                        app:layout_constraintLeft_toRightOf="@id/tv_title_date"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_title_date" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_list_spk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv_header_observer">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_title_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/list_spk"
                        android:layout_marginStart="5dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <View
                        android:id="@+id/view_list_spk"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@android:color/darker_gray"
                        app:layout_constraintTop_toBottomOf="@id/tv_title_list"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:visibility="visible"
                        android:id="@+id/rv_list_spk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/view_list_spk"
                        tools:itemCount="4"
                        tools:listitem="@layout/item_list_spk" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_data_null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="@string/data_null"
                        android:padding="5dp"
                        android:textSize="18sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/view_list_spk"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv_list_spk" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>